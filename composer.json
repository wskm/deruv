{
    "name": "wskm/deruv",
    "description": "Deruv Cms",
    "keywords": ["deruv", "yii2", "cms", "blog"],
    "homepage": "http://www.deruv.com/",
    "type": "project",
    "license": "GPL-2.0+",
    "support": {
        "issues": "https://github.com/wskm/deruv/issues?state=open",
        "source": "https://github.com/wskm/deruv"
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": "~2.0.6",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "yiisoft/yii2-swiftmailer": "~2.0.0",
        "yiisoft/yii2-redis": "^2.0",
        "yiisoft/yii2-imagine": "^2.1",
        "mdmsoft/yii2-admin": "~2.0",
        "miniflux/picofeed": "@stable"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.0.0",
        "yiisoft/yii2-gii": "~2.0.0",
        "yiisoft/yii2-faker": "~2.0.0",
        "codeception/base": "^2.2.3",
        "codeception/verify": "~0.3.1"
    },
    "config": {
        "process-timeout": 1800,
        "sort-packages": true,
        "optimize-autoloader": true,
        "fxp-asset":{
            "installer-paths": {
                "npm-asset-library": "vendor/npm",
                "bower-asset-library": "vendor/bower"
            }
        }
    },
    "scripts": {
        "post-install-cmd": "php init --env=Production --overwrite=n"
    }
}
